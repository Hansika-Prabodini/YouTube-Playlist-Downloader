# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# ==================================
# OpenAI API Configuration
# ==================================
# Required for file-v1-main.py (Taipy Chat Demo)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here

# Optional: Set API base URL if using a proxy or custom endpoint
# OPENAI_API_BASE=https://api.openai.com/v1

# Optional: Organization ID (if applicable)
# OPENAI_ORG_ID=org-your_org_id_here

# ==================================
# Application Configuration
# ==================================
# Set to 'true' only in development environments
DEBUG=false
USE_RELOADER=false

# ==================================
# Security Configuration
# ==================================
# Maximum message length for chat (characters)
MAX_MESSAGE_LENGTH=4000

# API rate limiting (calls per minute)
CALLS_PER_MINUTE=10

# ==================================
# Logging Configuration
# ==================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable security audit logging
ENABLE_AUDIT_LOG=true

# ==================================
# Notes
# ==================================
# 1. This file should be copied to .env and filled with actual values
# 2. The .env file is in .gitignore and will not be committed
# 3. For production, use a secure secrets management system
# 4. Rotate API keys regularly (at least every 90 days)
# 5. Set spending limits in your OpenAI dashboard
